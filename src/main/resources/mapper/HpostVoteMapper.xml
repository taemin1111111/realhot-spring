<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wherehot.spring.mapper.HpostVoteMapper">

    <!-- HpostVote ResultMap -->
    <resultMap id="HpostVoteResultMap" type="com.wherehot.spring.entity.HpostVote">
        <id property="id" column="id"/>
        <result property="postId" column="post_id"/>
        <result property="userid" column="userid"/>
        <result property="voteType" column="vote_type"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 투표 등록 -->
    <insert id="insertVote" parameterType="com.wherehot.spring.entity.HpostVote" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO hottalk_vote (post_id, userid, vote_type, created_at)
        VALUES (#{postId}, #{userid}, #{voteType}, #{createdAt})
    </insert>

    <!-- 사용자별 게시글 투표 조회 -->
    <select id="findVoteByUserAndPost" resultMap="HpostVoteResultMap">
        SELECT id, post_id, userid, vote_type, created_at
        FROM hottalk_vote
        WHERE userid = #{userid} AND post_id = #{postId}
        LIMIT 1
    </select>

    <!-- 게시글별 투표 목록 조회 -->
    <select id="findVotesByPost" resultMap="HpostVoteResultMap">
        SELECT id, post_id, userid, vote_type, created_at
        FROM hottalk_vote
        WHERE post_id = #{postId}
        ORDER BY created_at DESC
    </select>

    <!-- 게시글별 좋아요 수 조회 -->
    <select id="countLikesByPost" resultType="int">
        SELECT COUNT(*)
        FROM hottalk_vote
        WHERE post_id = #{postId} AND vote_type = 'like'
    </select>

    <!-- 게시글별 싫어요 수 조회 -->
    <select id="countDislikesByPost" resultType="int">
        SELECT COUNT(*)
        FROM hottalk_vote
        WHERE post_id = #{postId} AND vote_type = 'dislike'
    </select>

    <!-- 투표 수정 -->
    <update id="updateVote" parameterType="com.wherehot.spring.entity.HpostVote">
        UPDATE hottalk_vote
        SET vote_type = #{voteType}
        WHERE id = #{id}
    </update>

    <!-- 투표 삭제 -->
    <delete id="deleteVote">
        DELETE FROM hottalk_vote
        WHERE id = #{id}
    </delete>

    <!-- 사용자별 게시글 투표 삭제 -->
    <delete id="deleteVoteByUserAndPost">
        DELETE FROM hottalk_vote
        WHERE userid = #{userid} AND post_id = #{postId}
    </delete>

    <!-- 게시글의 모든 투표 삭제 -->
    <delete id="deleteVotesByPostId">
        DELETE FROM hottalk_vote
        WHERE post_id = #{postId}
    </delete>

</mapper>
